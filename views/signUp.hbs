</head>
<body class="SignUp">
          {{>header}}

          <div class="d-flex flex-column justify-content-center align-items-center py-2" id="formContainer">
                <form action="/signUp" class="container-fluid bg-light d-flex flex-column justify-content-center align-items-center border border-secondary border-opacity-50 py-5 shadow-lg shadow-slate-500"  method="POST" id="studentFormSignUp" >
              <h5>
                  Student SignUp 
                  <i class="fa fa-sign-in" ></i>
              </h5>
              <label for="firstName" class="container-fluid d-flex flex-column" >
                   <span>
                      first Name : 
                   </span>
                  <input type="text" name="firstName" placeholder="Enter your first Name" class="container-fluid py-1 px-2 my-1">
              </label>
              <label for="lastName" class="container-fluid d-flex flex-column" >
                   <span>
                      last Name : 
                   </span>
                  <input type="text" name="lastName" placeholder="Enter your Last Name" class="container-fluid py-1 px-2 my-1">
              </label>
              <label for="email" class="container-fluid d-flex flex-column" >
                   <span>
                      Email : 
                   </span>
                  <input type="email" name="email" placeholder="Enter your Email" class="container-fluid py-1 px-2 my-1">
              </label>
               <label for="College" class="container-fluid d-flex flex-column" >
                   <span>
                      College : 
                   </span>
                  <input type="text" name="college" placeholder="Enter your College" class="container-fluid py-1 px-2 my-1" id="collegeList" >
              </label>
              <label for="password" class="container-fluid d-flex flex-column" >
                   <span>
                      Password : 
                   </span>
                  <input type="password" name="password" placeholder="Enter your Password" class="container-fluid py-1 px-2 my-1">
              </label>
              <div class="w-full flex justify-center items-center text-center my-2">
                     <a href="http://localhost:7000/companySignUp" class="text-decoration-none text-red-400" >
                         Company SignUp
                     </a>
              </div>
              <input type="submit" value="signUp" class="col-sm-5 py-1 my-1">
          </form>
          </div>


<script>
    
     async function collegeListFetcher(){

      const res = await fetch("http://localhost:7000/api/collegeList")
      const data = await res.json();
      console.log(data)
          
              {{!--  DOM --}}
            CollegeList = document.getElementById('collegeList');
            var options = data?.map((d)=>{
              return `<option value="${d.college},${d.district},${d.state}">
                             ${d.college},${d.district},${d.state}
                      </option>`
            })
            CollegeList.innerHTML = options;
        
     }
