<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>signUp</title>
     <link rel="stylesheet" href="CSS/app.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
     {{!--  fontAwesome cdn Import --}}
       <script src="https://kit.fontawesome.com/8dc03a4776.js" crossorigin="anonymous"></script>
    {{!--  block ends here --}}
</head>
<body class="SignUp">
          {{>header}}

          <div class="d-flex flex-column justify-content-center align-items-center py-2" id="formContainerParent">
            <div class="container-fluid button-group d-flex justify-content-center align-items-center">
                  <button type="button" class="btn btn-outline-primary rounded-0 col-sm-6" onclick="studentFetcher()" >
                     Student
                  </button>
                  <button type="button" class="btn btn-outline-danger rounded-0 col-sm-6" onclick="companyFetcher()">
                     Company
                  </button>
            </div>
            <div class="container-fluid justify-content-center align-items-center" id="formContainer">
            </div>
          </div>


<script>
    function studentFetcher(){
        var formContainer = document.getElementById('formContainer');
        var content = `<form class="container-fluid bg-light d-flex flex-column justify-content-center align-items-center border-end border-bottom border-start border-secondary border-opacity-50 py-5"  method="post" id="studentFormSignUp" >
              <label for="first_name" class="container-fluid d-flex flex-column justify-content-center align-items-center" >
                  <input type="text" name="first_name" placeholder="Enter your first Name" class="container-fluid py-1 px-2 my-1">
              </label>
              <label for="last_name" class="container-fluid d-flex flex-column justify-content-center align-items-center" >
                  <input type="text" name="last_name" placeholder="Enter your Last Name" class="container-fluid py-1 px-2 my-1">
              </label>
              <label for="email" class="container-fluid d-flex flex-column justify-content-center align-items-center" >
                  <input type="email" name="email" placeholder="Enter your Email" class="container-fluid py-1 px-2 my-1">
              </label>
              <label for="email" class="container-fluid d-flex flex-column justify-content-center align-items-center" >
                  <input type="password" name="password" placeholder="Enter your Password" class="container-fluid py-1 px-2 my-1">
              </label>
              <input type="submit" class="col-sm-5 py-1 my-1">
          </form> `;
          formContainer.innerHTML = content;
    }

    function companyFetcher(){
        var formContainer = document.getElementById('formContainer');
        var content = `<form class="container-fluid bg-light d-flex flex-column justify-content-center align-items-center border-end border-bottom border-start border-secondary border-opacity-50 py-5"  method="post" id="companyFormSignUp" >
              <h5>
                  Company SignUp 
                  <i class="fa fa-sign-in" ></i>
              </h5>
              <label for="first_name" class="container-fluid d-flex flex-column" >
                   <span>
                      first Name : 
                   </span>
                  <input type="text" name="first_name" placeholder="Enter your first Name" class="container-fluid py-1 px-2 my-1">
              </label>
              <label for="last_name" class="container-fluid d-flex flex-column" >
                   <span>
                      last Name : 
                   </span>
                  <input type="text" name="last_name" placeholder="Enter your Last Name" class="container-fluid py-1 px-2 my-1">
              </label>
              <label for="email" class="container-fluid d-flex flex-column" >
                   <span>
                      Email : 
                   </span>
                  <input type="email" name="email" placeholder="Enter your Email" class="container-fluid py-1 px-2 my-1">
              </label>
              <label for="email" class="container-fluid d-flex flex-column" >
                   <span>
                      Password : 
                   </span>
                  <input type="password" name="password" placeholder="Enter your Password" class="container-fluid py-1 px-2 my-1">
              </label>
              <input type="submit" value="signUp" class="col-sm-5 py-1 my-1">
          </form> `;
          formContainer.innerHTML = content;
    }
    studentFetcher()
</script>
</body>
</html>